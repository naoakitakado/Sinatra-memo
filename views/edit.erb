<section>
        <h1>
          <a href="/">メモアプリ</a>
        </h1>
</section>
<section>
    <form class="edit-layout" action="/memo/<%= params[:id] %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <input class="title-edit-memo" name="title" value='<%= CGI.escapeHTML(@memo['title']) %>' required>
        <textarea class="content-edit-memo" name="content" required><%= CGI.escapeHTML(@memo['content']) %></textarea>
        <input class="add-edit-memo" type="submit" value="更新">
    </form>
</section>
